            </mj-text>
          </mj-column>
          <mj-column >
            <mj-text align="center">
              <a href="https://www.instagram.com/sistecredito/?hl=es">
                <img  src="assets/img/descarga de app.png" alt="Descripción de la imagen" width="187" height="18" />
              </a>
            </mj-text>
          </mj-column>
        </mj-section>
       <!-- </mj-wrapper> -->
      <!-- --------------------Terminos y pqrs -------------- -->
      <mj-section background-color="#F5F8FF">
        <mj-column>
          <mj-text>
            <div style="text-align: center;">
              <img src="assets/img/terminos.png" alt="Descripción de la imagen" width="282" height="18" />
            </div>
          </mj-text>
        </mj-column>
      </mj-section>

    </mj-container>
  </mj-body>
  <mj-breakpoint width="600px">
  </mj-breakpoint>
